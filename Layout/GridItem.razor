
<div class="@Css">
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool ColSpan { get; set; } = false;
    [Parameter]
    public bool RowSpan { get; set; } = false;
    [Parameter]
    public bool Center { get; set; } = false;

    private string Css = "griditem";

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (ColSpan)
        {
            Css += " griditem--colspan";
        }
        if (RowSpan)
        {
            Css += " griditem--rowspan";
        }
        if (Center)
        {
            Css += " griditem--center";
        }
    }
}
